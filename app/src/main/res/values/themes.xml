<resources>
    <style name="Theme.App.Start" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#51B6FF</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/bslogo_round</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.BilStudy.Main</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.BilStudy.Main" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/bilstudy_gray</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorAccent">@color/bilstudy_gray</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">@style/Theme.BilStudy.Main.TextAppearance</item>
        <item name="iconPadding">0dp</item>
        <item name="cornerRadius">9dp</item>
    </style>

    <style name="Theme.BilStudy.Leitner" parent="Theme.BilStudy.Main">
        <item name="colorPrimary">@color/leitner_primary</item>
        <item name="colorPrimaryVariant">@color/leitner_primary_variant</item>
        <item name="colorOnPrimary">@color/leitner_on_primary</item>
        <item name="colorAccent">@color/leitner_accent</item>

        <item name="android:textAppearance">@style/Theme.BilStudy.Leitner.TextAppearance</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:background">@color/leitner_background</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="Theme.BilStudy.Main.TextAppearance">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Theme.BilStudy.Leitner.TextAppearance" parent="Theme.BilStudy.Main.TextAppearance">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Theme.BilStudy.Pomodoro.PopUp" parent="Theme.BilStudy.Main">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:backgroundTint">@color/lightred</item>
        <item name="android:popupBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.BilStudy.Notepad.PopUp" parent="Theme.BilStudy.Main">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:backgroundTint">@color/notepad_light_yellow</item>
        <item name="android:popupBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>